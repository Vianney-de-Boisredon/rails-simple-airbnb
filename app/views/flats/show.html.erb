

<div class="container">
  <div class="row">
    <div class="col-xs-10 col-md-3 col-xs-offset-1">
      <div class="card">
        <h2><i class="fas fa-building"></i><%= @flat.name %> </h2>
        <p><i class="fas fa-map-marker-alt"></i><%= @flat.address %> </p>
        <p><i class="fas fa-euro-sign"></i><%= @flat.price_per_night %></p>
        <p><i class="fas fa-user"></i><%= @flat.number_of_guests %></p>
        <p>
          <% @flat.rating.times do %>
            <i class="fas fa-star"></i>
          <% end %>
          <%= @flat.rating %>
        </p>
        <%= link_to "Back to flats", flats_path, class: "btn btn-primary" %>
      </div>
    </div>
  </div>
</div>

