<h1>All our Flats (<%= @flats.length %>) </h1>

<div class="container">
  <div class="row">
    <% @flats.each do |flat| %>
      <div class="col-xs-10 col-md-4 col-xs-offset-1">
        <div class="card">
          <h2><i class="fas fa-building"></i><%= flat.name %> </h2>
          <p><i class="fas fa-map-marker-alt"></i><%= flat.address %></p>
          <p><i class="fas fa-euro-sign"></i> <%= flat.price_per_night %></p>
          <p><i class="fas fa-user"></i><%= flat.number_of_guests %> </p>
          <p><% flat.rating.times do %>
            <i class="fas fa-star"></i>
            <% end %>
            <%= flat.rating %>
          </p>
          <%= link_to "More info", flat_path(flat), class: "btn btn-primary" %>
        </div>
      </div>
    <% end %>
  </div>
</div>






